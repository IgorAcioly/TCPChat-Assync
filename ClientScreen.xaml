<Window x:Class="TCPChat_Assync.ClientScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCPChat_Assync"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Label x:Name="txtIPServer" Content="IP Server" HorizontalAlignment="Left" Margin="31,21,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBox_IPServer" HorizontalAlignment="Left" Margin="112,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="28"/>
        <Label x:Name="txtPortServer" Content="Port Server" HorizontalAlignment="Left" Margin="25,62,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBox_PortServer" HorizontalAlignment="Left" Margin="112,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="71" Height="28"/>
        <Label x:Name="txtDigiteMensagem" Content="Digite a mensagem:" HorizontalAlignment="Left" Margin="28,189,0,0" VerticalAlignment="Top" Cursor=""/>
        <TextBox x:Name="txtBox_Mensagem" HorizontalAlignment="Left" Margin="148,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232" Height="180"/>
        <TextBox x:Name="txtBox_StatusMensagem" HorizontalAlignment="Left" Margin="427,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="343" Height="310"/>
        <Button x:Name="btnConectar" Content="Conectar" HorizontalAlignment="Left" Margin="51,108,0,0" VerticalAlignment="Top" Height="32" Width="62" Click="btnConectar_Click"/>
        <Button x:Name="btnDesconectar" Content="Desconectar" HorizontalAlignment="Left" Margin="137,108,0,0" VerticalAlignment="Top" Height="32" Width="70" Click="btnDesconectar_Click"/>
        <ScrollBar HorizontalAlignment="Left" Margin="380,202,0,0" VerticalAlignment="Top" Height="145" Width="10"/>
        <ScrollBar HorizontalAlignment="Left" Margin="770,101,0,0" VerticalAlignment="Top" Height="307" Width="10"/>
        <Button x:Name="btnEnviar" Content="Enviar" HorizontalAlignment="Left" Margin="328,366,0,0" VerticalAlignment="Top" Height="28" Width="52"/>

    </Grid>
</Window>

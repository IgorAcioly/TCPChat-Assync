<Window x:Class="TCPChat_Assync.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCPChat_Assync"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Login Screen" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="127*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnEntrar" Content="Entrar" HorizontalAlignment="Left" Margin="294,294,0,0" VerticalAlignment="Top" Height="31" Width="90" Grid.Column="1" Click="btnEntrar_Click"/>
        <Button x:Name="btnCadastrar" Content="Cadastrar" HorizontalAlignment="Left" Margin="164,294,0,0" VerticalAlignment="Top" Height="31" Width="92" Grid.Column="1" Click="btnCadastrar_Click"/>
        <TextBox x:Name="txtBox_Usuario" HorizontalAlignment="Left" Margin="213,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162" Height="28" Grid.Column="1"/>
        <TextBox x:Name="txtBox_Senha" HorizontalAlignment="Left" Margin="213,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162" Height="26" Grid.Column="1"/>
        <Label x:Name="txtUsuario" Content="Nome de usuário: &#xD;&#xA; " HorizontalAlignment="Left" Margin="93,166,0,0" VerticalAlignment="Top" Height="28" Width="105" Grid.Column="1"/>
        <Label x:Name="txtSenha" Content="Senha: " HorizontalAlignment="Left" Margin="121,217,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label x:Name="txtLogin" Content="LOGIN" HorizontalAlignment="Left" Margin="206,52,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="38" Width="83" FontSize="20" Grid.Column="1"/>
        <Rectangle x:Name="txtLogin1" HorizontalAlignment="Left" Height="38" Margin="189,52,0,0" Stroke="Black" VerticalAlignment="Top" Width="112" Grid.Column="1"/>

    </Grid>
</Window>
